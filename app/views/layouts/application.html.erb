<!--共通のコード-->
<!DOCTYPE html>
<html>
<head>
  <title>Bookers</title>
  <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left"> <span class="glyphicon glyphicon-book">Bookers</span> </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <!--ログイン中のヘッダー-->
            <li>

            <!--仮にリダイレクト先をroot_pathにしている-->
            <!--本来はusers/show/-->


            <%= link_to user_path(current_user.id), :method => :GET do %>
              <i class="glyphicon glyphicon-home"></i> Home
                <% end %>
                   <!--<a class="glyphicon glyphicon-home" href="/users"> Home</a>--></li>
            <li>
              <%= link_to users_path, :method => :GET do %> <i class="glyphicon glyphicon-user"></i> Users
                <% end %>
                  <!--<a class="glyphicon glyphicon-user" href="/users"> Users</a>--></li>
            <li>
              <%= link_to books_path, :method => :GET do %> <i class="glyphicon glyphicon-book"></i> Books
                <% end %>
                  <!--<a class="glyphicon glyphicon-book" href="/books"> Books</a>--></li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %> <i class="glyphicon glyphicon-log-out"></i> logout
                <% end %>
                  <!--<a class="glyphicon glyphicon-log-out" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a>--></li>
            <% else %>
              <!--ログアウト中のヘッダー-->
              <li>
                <%= link_to root_path, :method => :GET do %> <i class="glyphicon glyphicon-home"></i> Home
                  <% end %>
                    <!--<a class="glyphicon glyphicon-home" href="/"> Home</a>--></li>
              <li>
                <%= link_to home_about_path, :method => :GET do %> <i class="glyphicon glyphicon-link"></i> About
                  <% end %>
                    <!--<a class="glyphicon glyphicon-link" href="/home/about"> About</a>--></li>
              <li>
                <%= link_to new_user_registration_path, :method => :GET do %> <i class="glyphicon glyphicon-edit"></i> sign up
                  <% end %>
                    <!--<a class="glyphicon glyphicon-edit" href="/users/sign_up"> sign up</a>--></li>
              <li>
                <%= link_to new_user_session_path, :method => :GET do %> <i class="glyphicon glyphicon-log-in"></i> login
                  <% end %>
                    <!--<a class="glyphicon glyphicon-log-in" href="/users/sign_in"> login</a>--></li>
              <% end %>
        </ul>
      </nav>
    </div>
  </header>


  <%= yield %>


    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight HAYATO</p>
          </div>
        </div>
      </div>
    </footer>
</body>
</html>